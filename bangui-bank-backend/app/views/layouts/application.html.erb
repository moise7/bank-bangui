<!DOCTYPE html>
<html>
<head>
  <title>MyApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <!-- Make sure you're loading the correct JavaScript -->
  <%= stylesheet_pack_tag 'application', 'data-turbo-track': 'reload', media: 'all' %>
  <%= javascript_pack_tag 'application', 'data-turbo-track': 'reload' %>
</head>
<body>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value %>
    </div>
  <% end %>
  <%= yield %>
</body>
</html>
