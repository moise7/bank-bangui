<h1>Add Money to User Account</h1>

<%= form_with url: update_balance_admin_user_path(@user), method: :post do |form| %>
  <div class="field">
    <%= form.label :amount, "Amount to Add" %>
    <%= form.number_field :amount, step: '0.01', min: '0.01', required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Add Money" %>
  </div>
<% end %>

<%= link_to 'Back to Users List', admin_users_path %>
